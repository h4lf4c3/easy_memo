{
  "name": "memo",
  "version": "1.0.0",
  "description": "EasyMemo",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.memo.app",
    "productName": "EasyMemo",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "image/icon.ico",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "image/icon.ico",
      "uninstallerIcon": "image/icon.ico"
    }
  },
  "keywords": [
    "electron",
    "memo",
    "task",
    "project"
  ],
  "author": "MemoApp Developer",
  "license": "ISC",
  "dependencies": {
    "@visactor/vchart": "^2.0.3",
    "@visactor/vtable-gantt": "^1.19.6",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.2.0",
    "jimp": "^1.6.0",
    "to-ico": "^1.1.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^2.1.8",
    "svg2img": "^1.0.0-beta.2"
  }
}
